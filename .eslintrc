{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"_": "readonly",
		"sweetAlert": "readonly",
        "evenPicServices": "readonly",
        "process": "readonly",
        "angular": "readonly",
        "apiBaseUrl": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"rules": {
		"brace-style": ["error", "1tbs", { "allowSingleLine": true }],
		"eol-last": "error",
		"eqeqeq": "error",
		"func-style": ["error", "declaration", { "allowArrowFunctions": true }],
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"key-spacing": ["error", { "beforeColon": false, "afterColon": true }],
		"keyword-spacing": "error",
		"linebreak-style": ["error", "unix"],
		"newline-after-var": "error",
		"no-alert": "error",
		"no-console": "error",
		"no-trailing-spaces": "error",
		"no-useless-escape": [0], // temporario, isso deveria estar ativo, faz parte do eslint:recommended
		"semi": ["error", "always"],
		"space-before-blocks": "error",
		"space-before-function-paren": ["error", "never"],
		"quotes": ["error", "single"],
		"vars-on-top": "error"
	}
}
